</section><!-- #options -->

<div id="isotope-container" class="row clearfix clickable">

  <% data.isotope.each do |k| %>
    <% if (k.hotspot) %>
      <div class="col desktop-12col-span4 tablet-12col-span4 mobile-12col-span8 <%= k.icon %> height2 element white" data-hotspot="1" data-date="">
    <% else %>
      <div class="col desktop-12col-span2 tablet-12col-span2 mobile-12col-span4 <%= k.icon %> element" data-hotspot="5" data-date="">
    <% end %>

      <div class="item">
        <div class="corner">
          <% if (k.hotspot) %><i class="icon-hotspot"></i><% end %> <i class="icon-<%= k.icon %>"></i>
        </div>
        <div class="desc">
          <h3 class="name"><%= k.title %></h3>
          <p><%= k.subtitle %></p>
        </div>
        <p class="number"><%= k.percent %></p>
        <p class="subStats"><%= k.subStats %></p>
        <p class="date"><%= k.date %></p>
        <i class="dots icon-dots"></i>
      </div>
    </div> 
  <% end %>

</div><!-- #isotope-container -->

